{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Integration Tests",
      "program": "${workspaceFolder}/_integration_tests/node_modules/mocha/bin/_mocha",
      "args": [
        "-u",
        "tdd",
        "--timeout",
        "15000",
        "--colors",
        "${workspaceFolder}/_integration_tests/test",
        "--exit"
      ],
      
      "protocol": "inspector",
      "stopOnEntry": true,
      "cwd": "${workspaceFolder}/_integration_tests",
      "internalConsoleOptions": "openOnSessionStart",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "test",
        "CONFIG_PATH": "config"
      },
      
      "runtimeArgs": [
        "--preserve-symlinks"
      ],
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Skeleton - Start Server",
      "program": "${workspaceFolder}/skeleton/process-engine-server/bin/start.js",
      "args": [],
      "cwd": "${workspaceFolder}/skeleton/process-engine-server",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development",
        "CONFIG_PATH": "config",
      },
      "runtimeArgs": [
        "--preserve-symlinks"
      ]
    },
  ]
}
